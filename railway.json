{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd shared && npm run build && cd ../orchestrator && npm run build"
  },
  "deploy": {
    "startCommand": "cd orchestrator && node dist/orchestrator/src/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}


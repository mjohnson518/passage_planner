# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://admin:secure_password@localhost:5432/passage_planner

# Redis
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# External APIs
NOAA_API_KEY=your_noaa_api_key
OPENWEATHER_API_KEY=your_openweather_api_key
WINDFINDER_API_KEY=your_windfinder_api_key

# MCP Configuration
MCP_ORCHESTRATOR_PORT=8080
MCP_AGENT_TIMEOUT=30000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
HEALTH_PORT=8081

# Agent Configuration
WEATHER_AGENT_PORT=8101
TIDAL_AGENT_PORT=8102
PORT_AGENT_PORT=8103
SAFETY_AGENT_PORT=8104
ROUTE_AGENT_PORT=8105
WIND_AGENT_PORT=8106
AGENT_FACTORY_PORT=8107

# Feature Flags
ENABLE_AGENT_FACTORY=true
ENABLE_WEATHER_LAYERS=true
ENABLE_MONITORING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Service URLs (for production)
ORCHESTRATOR_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

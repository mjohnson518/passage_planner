{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": []
  },
  "include": ["src/index.ts", "src/services/routeCalculator.ts"],
  "exclude": ["node_modules", "dist", "src/agents", "src/middleware", "src/shared"]
}

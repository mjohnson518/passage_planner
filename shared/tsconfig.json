{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["node"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "../frontend/**/*", "src/**/__tests__", "src/**/*.test.ts", "src/testing"]
} 